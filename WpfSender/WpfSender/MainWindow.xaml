        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSender"
        mc:Ignorable="d"
        Title="Sender" Height="450" Width="300">
    <DockPanel>
        <StackPanel Margin="5" DockPanel.Dock="Top">
            <Button Content="Buttom A" Click="Button_Click"/>
            <Button Content="Buttom B" Click="Button_Click"/>
            <Button Content="Buttom C" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Margin="5" DockPanel.Dock="Top" ButtonBase.Click="Button_Click">
            <Button Content="Buttom 1"/>
            <Button Content="Buttom 2"/>
            <Button Content="Buttom 3"/>
        </StackPanel>

        <ListBox x:Name="LBlogs"/>

    </DockPanel>
</Window>
